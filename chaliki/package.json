{
  "name": "chaliki",
  "version": "0.1.0",
  "description": "An Electron/Graphite/React/Proskomma Template",
  "main": "main.js",
  "homepage": "https://github.com/Proskomma/chaliki",
  "author": "Mark Howe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Proskomma/chaliki/issues"
  },
  "dependencies": {
    "@craco/craco": "^6.1.2",
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "electronite": "^12.0.5-graphite",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "slate": "^0.62.1",
    "slate-react": "^0.62.1",
    "uw-proskomma": "^0.4.23",
    "xregexp": "^5.0.2"
  },
  "scripts": {
    "analyze": "source-map-explorer 'build/static/js/*.js'",
    "storybook": "start-storybook -p 6006 -s public",
    "windows_1": "yarn react-start",
    "windows_2": "cross-env NODE_ENV=development yarn electron-start",
    "start": "concurrently \"yarn react-start\" \"wait-on http://localhost:3000/ && cross-env NODE_ENV=development yarn electron-start\"",
    "build": "yarn react-build && yarn build-main && copyfiles package.json build/ && yarn electron-build",
    "electron-start": "electronite .",
    "electron-build": "electronite-packager ./build --out=dist",
    "react-start": "craco start",
    "react-build": "craco build",
    "build-main": "webpack --config electron/webpack.config.js",
    "test": "craco test",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "engines": {
    "node": ">= 10.16"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/node-logger": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.9",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "concurrently": "^6.0.2",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "electron-devtools-installer": "^3.2.0",
    "electronite-packager": "^15.0.0",
    "source-map-explorer": "^2.5.2",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0",
    "webpack-cli": "^4.6.0"
  }
}
